<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurrencyConverterFragment">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button"
        android:layout_marginEnd="-31dp"
        android:layout_marginRight="-31dp"
        android:layout_marginTop="50dp"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_money_foreground" />


    <EditText
        android:id="@+id/fromCurrencyValue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="41dp"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="164dp"

        android:ems="10"
        android:inputType="number" />

    <Spinner
        android:layout_toRightOf="@id/toValue"
        android:id="@+id/fromCurrencySpinner"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fromCurrencyValue"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="23dp"
        android:background="@color/colorAccent" />

    <EditText
        android:id="@+id/toValue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/fromCurrencyValue"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="231dp"
         />

    <Spinner
        android:layout_toRightOf="@id/toValue"
        android:id="@+id/toSpinner"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/toValue"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorAccent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="125dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="297dp"
        android:text="Converte" />

    <TextView
        android:id="@+id/aktualnyKurs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="51dp"
        android:layout_marginLeft="51dp"
 android:layout_marginBottom="173dp"
        android:text="Aktualny Kurs" />



    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="51dp"
 android:layout_marginLeft="51dp"
        android:layout_marginBottom="113dp"
        android:text="Value" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView6"
        android:layout_marginStart="44dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/toValue"
        android:text="0" />

</RelativeLayout>